html
  head
    title Upload Resume for Existing User
    link(rel="stylesheet", href="/stylesheets/foundation.min.css")
    link(rel="stylesheet", href="/stylesheets/style.css")
  body
    div.panel
      form(action="/users/existing", method="POST")
        div.row
          label Name
          input(type="text", placeholder = "Name", name = "name")
        div.row
          label Email
          input(type="email", placeholder = "Email", name="email")
        div.row
          input(type="filepicker", data-fp-apikey="AVRqlhXowRme6yNY2qmrdz", 
            name="filepicker_url", data-fp-mimetypes="application/pdf", 
            data-fp-container="modal", data-fp-services="COMPUTER,DROPBOX,GOOGLE_DRIVE,URL")
        div.row
          input.button.small(type="submit")
    script(type="text/javascript", src="//api.filepicker.io/v1/filepicker.js")
