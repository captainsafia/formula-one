html
  head
    title Create Profile
    link(rel="stylesheet", href="/stylesheets/foundation.min.css")
    link(rel="stylesheet", href="/stylesheets/style.css")
  body
    div.panel
      form(action="/users/new", method="POST")
        div.row
          label Name
          input(type="text", placeholder = "Name", name="name")
        div.row
          label Email
          input(type="email", placeholder = "Email", name="email")
        div.row
          label Year
          select(name="year")
            option(value="Freshman") Freshman
            option(value="Sophomore") Sophomore
            option(value="Junior") Junior
            option(value="Senior") Senior
        div.row
          label University
          input(type="text", placeholder = "University", name = "university")
        div.row
          label Major
          input(type="text", placeholder = "Major", name = "major")
        div.row.expirence
          label Expirence
          input(type="text", placeholder = "Company", name = "company")
          input(type="text", placeholder = "Position", name = "position")
          div.large-6.columns
            input(type="text", placeholder = "09/23/2012", name = "start_date_work")
          div.large-6.columns
            input(type="text", placeholder = "09/24/2014", name = "end_date_work")
          textarea(placeholder = "Summary", name = "summary")
        div.row.education
          label Education
          input(type="text", placeholder = "Institution", name = "institution")
          div.large-6.columns
            input(type="text", placeholder = "2014", name = "start_date_edu")
          div.large-6.columns
            input(type="text", placeholder = "2018", name = "end_date_edu")
        div.row
          label International Student
          input(type="radio", name="international", value="true")#international-true
          label(for="international-true") Yes
          input(type="radio", name="international", value="false")#international-false
          label(for="international-false") No
        div.row
          label Epic Member
          input(type="radio", name="epic", value="true")#epic-true
          label(for="epic-true") Yes
          input(type="radio", name="epic", value="false")#epic-false
          label(for="epic-true") No
        div.row
          input(type="filepicker", data-fp-apikey="AVRqlhXowRme6yNY2qmrdz", 
            name="filepicker_url", data-fp-mimetypes="application/pdf", 
            data-fp-container="modal", data-fp-services="COMPUTER,DROPBOX,GOOGLE_DRIVE,URL")
        div.row
          input.button.small(type="submit")
    script(type="text/javascript", src="//api.filepicker.io/v1/filepicker.js")
